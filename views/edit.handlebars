<!doctype html>
<html>
<head>
<title>Course List</title> </head>
<body>
<h1>Edit Course</h1> 
<p>
	<form method="get" action="/update"> 
			<table>
			<tr> 
			<td>
				<label for="title">Title:</label> </td>
			<td>
				<input type="text" name="title" value="{{course.title}}"> </td>
			<td>
				<label for="instructor">Instructor:</label> </td>
			<td>
				<input type="text" name="instructor" value="{{course.instructor}}"> </td>
			<td>
				<label for="semester">Semester:</label> </td>
			<td>
				<input type="text" name="semester" value="{{course.semester}}""> </td>
			</tr>
			<input type="hidden" name="id" value="{{course._id}}">
		</table>
		<input type="submit" value="Save Changes">
	</form>
	<a href="/">Return Home</a>
</p>
</body>
</html>